        <field name="model_id" ref="sale.model_sale_order_line"/>
        <field name="domain_force">[('order_id.sales_team_restrict', '=', False)]</field>
    </record>
    
    <record id="rule_sales_team_crm_lead" model="ir.rule">
        <field name="name">Private Sales Team - crm.lead</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="domain_force">[('sales_team_restrict', '=', False)]</field>
